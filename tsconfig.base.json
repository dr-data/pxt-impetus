{
  "compilerOptions": {
    "target": "es5",

    "baseUrl": ".",
    "rootDir": ".",

    "newLine": "lf",

    "sourceMap": false,

    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,

    "paths": {
      "*": [
        "*",
        "other_modules/*"
      ]
    }
  }
}
    